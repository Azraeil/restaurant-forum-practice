<h1>餐廳後台</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <%= restaurant.name %>
    <%= link_to 'Show', admin_restaurant_path(restaurant.id) %>
    <%= link_to 'Edit', edit_admin_restaurant_path(restaurant.id) %>
    <%= link_to 'Delete', admin_restaurant_path(restaurant.id), method: :delete, data: {confirm:"Delete #{restaurant.name} are you sure ?"} %>

  </li>
  <% end %>
</ul>

